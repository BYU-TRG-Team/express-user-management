{
  "compilerOptions": {
      "target": "ES2016", 
      "module": "ES6",
      "resolveJsonModule": true,
      "sourceMap": true,
      "outDir": "./dist",
      "strict": true,
      "noUnusedLocals": true,
      "moduleResolution": "node",
      "baseUrl": "./src",                     
      "esModuleInterop": true,
      "typeRoots": [
        "@types",
        "./node_modules/@types",
      ],
      "declaration": true,  
  },
  "include": ["src/**/*"],
  "exclude": ["__tests__/**/*", "__mocks__/**/*"]
}