{
  "compilerOptions": {
      "target": "ES2016", 
      "module": "ES6",
      "resolveJsonModule": true,
      "lib": [
          "es5",
          "es6",
          "dom",
          "es2015.core",
          "es2015.collection",
          "es2015.generator",
          "es2015.iterable",
          "es2015.promise",
          "es2015.proxy",
          "es2015.reflect",
          "es2015.symbol",
          "es2015.symbol.wellknown",
          "esnext.asynciterable",
          "es2016",
          "es2017.object"
      ], 
      "sourceMap": true,
      "outDir": "./dist",
      "strict": true,
      "noUnusedLocals": true,
      "moduleResolution": "node",
      "baseUrl": "./src",                     
      "esModuleInterop": true,
      "typeRoots": [
        "@types",
        "./node_modules/@types",
      ],
      "declaration": true,  
  },
  "include": ["src/**/*"],
  "exclude": ["__tests__/**/*", "__mocks__/**/*"]
}