{
  "compilerOptions": {
    "target": "ES6", 
    "module": "ES6", 
    "resolveJsonModule": true,
    "sourceMap": true, 
    "outDir": "./dist", 
    "strict": true, 
    "noUnusedLocals": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "declaration": true,  
    "paths": {
      "tests/*": [
        "./__tests__/*"
      ],
      "mocks/*": [
        "./__mocks__/*"
      ],
      "middleware/*": [
        "./src/middleware/*"
      ],
      "types/*": [
        "./src/types/*"
      ],
      "constants/*": [
        "./src/constants/*"
      ],
      "controllers/*": [
        "./src/controllers/*"
      ],
      "db/*": [
        "./src/db/*"
      ],
      "di/*": [
        "./src/di/*"
      ],
      "services/*": [
        "./src/services/*"
      ],
      "support/*": [
        "./src/support/*"
      ],
      "routes/*": [
        "./src/routes/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "@types",
    "__tests__/"
  ]
}