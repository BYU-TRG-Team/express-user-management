{
  "compilerOptions": {
    "target": "ES6", 
    "module": "ES6", 
    "resolveJsonModule": true,
    "sourceMap": true, 
    "outDir": "./dist", 
    "strict": true, 
    "noUnusedLocals": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": ".",
    "esModuleInterop": true,
    "declaration": true,  
    "paths": {
      "@tests/*": [
        "./__tests__/*"
      ],
      "@": [
        "./src"
      ],
      "@config-manager": [
        "./src/config-manager"
      ],
      "@smtp-client": [
        "./src/smtp-client"
      ],
      "@typings": [
        "./src/types"
      ],
      "@typings/*": [
        "./src/types/*"
      ],
      "@middleware/*": [
        "./src/middleware/*"
      ],
      "@constants/*": [
        "./src/constants/*"
      ],
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@db": [
        "./src/db"
      ],
      "@db/*": [
        "./src/db/*"
      ],
      "@bottle": [
        "./src/bottle"
      ],
      "@helpers/*": [
        "./src/helpers/*"
      ],
      "@support/*": [
        "./src/support/*"
      ],
      "@routes/*": [
        "./src/routes/*"
      ],
    }
  },
  "include": [
    "src/**/*",
    "@types/",
    "__tests__/"
  ]
}