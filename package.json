{
  "name": "@byu-trg/express-user-management",
  "version": "1.1.3",
  "description": "Node.js library to extend an Express.js REST API with user management functionality. The library includes:",
  "main": "commonjs/src/index.js",
  "module": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "type": "module",
  "scripts": {
    "build:commonjs": "tsc --project tsconfig.commonjs.json && resolve-tspaths --project tsconfig.commonjs.json  && echo '{\"type\": \"commonjs\"}' > commonjs/package.json",
    "build:es6": "tsc --project tsconfig.json && resolve-tspaths --project tsconfig.json",
    "build:all": "npm run build:es6 && npm run build:commonjs",
    "build": "npm run build:all",
    "test": "jest --coverage",
    "migrate": "node-pg-migrate -t pgmigrations_identity",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepare": "husky install"
  },
  "engines": {
    "node": "16.x"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BYU-TRG-Team/express-user-management.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BYU-TRG-Team/express-user-management/issues"
  },
  "homepage": "https://github.com/BYU-TRG-Team/express-user-management#readme",
  "devDependencies": {
    "@jest-mock/express": "^2.0.1",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.179",
    "@types/nodemailer": "^6.4.4",
    "@types/nodemailer-smtp-transport": "^2.7.5",
    "@types/pg": "^8.6.4",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "^8.10.0",
    "jest": "^29.4.2",
    "resolve-tspaths": "^0.8.8",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "husky": "^8.0.3",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "node-pg-migrate": "^6.2.1",
    "node-tsc": "0.0.14",
    "nodemailer": "^6.7.2",
    "nodemailer-smtp-transport": "^2.7.4",
    "pg": "^8.7.3",
    "winston": "^3.6.0"
  }
}
